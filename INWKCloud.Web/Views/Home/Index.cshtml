@{
    ViewData["Title"] = "INWK Cloud panel";
}

<form action="~/Home/CreateVM" method="post">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">Welcome, rgabbarelli</div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    Create a new Virtual  Machine:
                </div>
                <div class="col-md-6">
                    <select id="vmOption" name="vmOption">
                        <option value="win1">Small Windows 2016</option>
                        <option value="win2">Medium Windows 2016</option>
                        <option value="win3">Large Windows 2016</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    Cost center:
                </div>
                <div class="col-md-6">
                    <select id="vmCostCenter" name="vmCostCenter">
                        <option value="marketing">Marketing</option>
                        <option value="valo">Valo development</option>
                        <option value="ops">Operations</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    User Name:
                </div>
                <div class="col-md-6">
                    <input type="text" id="userName" name="userName" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    Password:
                </div>
                <div class="col-md-6">
                    <input type="password" id="password" name="password" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" value="Create" />
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</form>